
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is an admin or a hardcoded Super Admin.
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.admin == true || 
        request.auth.uid == 'vcyHNmY9FNQRq5k0pKoTBDr6vBh2' || 
        request.auth.uid == 'BpA8qniZ03YttlnTR25nc6RrWrZ2'
      );
    }

    /**
     * @description Super Admin catch-all: Admins have full access to everything.
     */
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    /**
     * @description Specific rules for non-admin users.
     */
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId && 
                      !('rosterStatus' in request.resource.data) && 
                      !('playstyleTags' in request.resource.data);
      allow update: if isSignedIn() && request.auth.uid == userId && 
                      !request.resource.data.diff(resource.data).affectedKeys().hasAny(['rosterStatus', 'playstyleTags']);
      allow delete: if isSignedIn() && request.auth.uid == userId;
    }

    match /votes/{voteId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /scheduledEvents/{eventId} {
      allow read: if isSignedIn();
    }

    match /availabilityOverrides/{overrideId} {
        allow read: if isSignedIn();
    }

    match /appNotifications/{notificationId} {
        allow read: if isSignedIn();
    }

    match /eventBanners/{bannerId} {
        allow read: if isSignedIn();
    }
  }
}
