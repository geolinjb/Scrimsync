rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // The UID of the designated admin user.
    function isAdmin() {
      return request.auth.uid == 'BpA8qniZ03YttlnTR25nc6RrWrZ2';
    }

    /**
     * @description Secures a user's profile document.
     * @path /users/{userId}
     */
    match /users/{userId} {
      // Any signed-in user can read profiles.
      allow read: if isSignedIn();

      // Users can create and update their own profile.
      allow write: if isOwner(userId);
      
      // Admins can delete any user profile.
      allow delete: if isAdmin();
    }
    
    /**
     * @description Secures a user's votes. Users can only manage their own votes.
     * @path /votes/{voteId}
     */
    match /votes/{voteId} {
        // Any authenticated user can read all votes to build the heatmap.
        allow read: if isSignedIn();
        // A user can create/update a vote if the data's userId matches their own.
        allow create, update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        // A user can delete their own vote, OR an admin can delete any vote.
        allow delete: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
    }

    /**
     * @description Manages scheduled events.
     * @path /scheduledEvents/{eventId}
     */
    match /scheduledEvents/{eventId} {
      // Any authenticated user can read events.
      allow read: if isSignedIn();
      // A user can create an event if they are the creator specified in the new document.
      allow create: if isOwner(request.resource.data.creatorId);
      // Only the creator or an admin can update or delete an event.
      allow update, delete: if isOwner(resource.data.creatorId) || isAdmin();
    }
  }
}
