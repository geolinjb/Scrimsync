rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Global constant for the Super Admin UID
    function ADMIN_UID() {
      return "BpA8qniZ03YttlnTR25nc6RrWrZ2";
    }

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Checks for the 'admin' custom claim on the user's token.
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    /**
     * @description Secures a user's profile document.
     * @path /users/{userId}
     */
    match /users/{userId} {
      // Any user (authenticated or not) can read profiles for the public roster.
      allow read;

      // Users can create their own profile.
      allow create: if isOwner(userId);
      
      // Users can update their own profile, but only admins can change roster status or tags.
      // Super Admin can also update anything.
      allow update: if (isOwner(userId) && !isChangingRestrictedFields()) || isAdmin() || request.auth.uid == ADMIN_UID();
      
      // Only an admin or the Super Admin can delete a user profile.
      allow delete: if isAdmin() || request.auth.uid == ADMIN_UID();

      // Helper function to check if a non-admin is trying to modify restricted fields.
      function isChangingRestrictedFields() {
        // This function now returns false if the user is an admin or super admin, allowing them to change these fields.
        let isRestrictedUpdater = !isAdmin() && request.auth.uid != ADMIN_UID();
        let isChangingFields = request.resource.data.keys().hasAny(['rosterStatus', 'playstyleTags']);
        return isRestrictedUpdater && isChangingFields;
      }
    }
    
    /**
     * @description Secures a user's votes. Users can only manage their own votes.
     * @path /votes/{voteId}
     */
    match /votes/{voteId} {
        // Any authenticated user can read all votes to build the heatmap.
        allow read: if isSignedIn();
        // A user can create/update a vote if the data's userId matches their own.
        allow create, update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        // A user can delete their own vote, OR an admin/Super Admin can delete any vote.
        allow delete: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin() || request.auth.uid == ADMIN_UID());
    }

    /**
     * @description Manages scheduled events.
     * @path /scheduledEvents/{eventId}
     */
    match /scheduledEvents/{eventId} {
      // Any authenticated user can read events.
      allow read: if isSignedIn();
      // Any authenticated user can create, update, or delete events.
      allow write: if isSignedIn();
    }
  }
}
