rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Secures a user's profile document.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow read: if isSignedIn();
      // Only the owner can create or update their profile.
      allow create, update: if isOwner(userId);
      // No one can delete user profiles from the client.
      allow delete: if false;
    }
    
    /**
     * @description Secures a user's votes. Users can only manage their own votes.
     * @path /votes/{voteId}
     */
    match /votes/{voteId} {
        // Any authenticated user can read all votes to build the heatmap.
        allow read: if isSignedIn();
        // A user can create/update a vote if the data's userId matches their own.
        allow create, update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        // A user can delete their own vote.
        allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    /**
     * @description Manages scheduled events.
     * @path /scheduledEvents/{eventId}
     */
    match /scheduledEvents/{eventId} {
      // Any authenticated user can read events.
      allow read: if isSignedIn();
      // A user can create an event if they are the creator specified in the new document.
      allow create: if isOwner(request.resource.data.creatorId);
      // Only the creator of an existing event can update or delete it.
      allow update, delete: if isOwner(resource.data.creatorId);
    }
  }
}
