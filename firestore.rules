rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Global constant for the Super Admin UID
    function ADMIN_UID() {
      return "BpA8qniZ03YttlnTR25nc6RrWrZ2";
    }

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Checks for the 'admin' custom claim on the user's token.
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    /**
     * @description Secures a user's profile document.
     * @path /users/{userId}
     */
    match /users/{userId} {
      // Any signed-in user can read profiles.
      allow read: if isSignedIn();

      // Users can create and update their own profile, or an admin can update any profile.
      allow write: if isOwner(userId) || isAdmin();
      
      // Only an admin can delete a user profile.
      allow delete: if isAdmin();
    }
    
    /**
     * @description Secures a user's votes. Users can only manage their own votes.
     * @path /votes/{voteId}
     */
    match /votes/{voteId} {
        // Any authenticated user can read all votes to build the heatmap.
        allow read: if isSignedIn();
        // A user can create/update a vote if the data's userId matches their own.
        allow create, update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        // A user can delete their own vote, OR an admin can delete any vote.
        allow delete: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
    }

    /**
     * @description Manages scheduled events.
     * @path /scheduledEvents/{eventId}
     */
    match /scheduledEvents/{eventId} {
      // Any authenticated user can read events.
      allow read: if isSignedIn();
      // Only an admin OR the super admin can create, update, or delete events.
      allow write: if isAdmin() || isOwner(ADMIN_UID());
    }
  }
}
