rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if a user is an admin.
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.admin == true || 
        request.auth.uid == 'vcyHNmY9FNQRq5k0pKoTBDr6vBh2' || 
        request.auth.uid == 'BpA8qniZ03YttlnTR25nc6RrWrZ2'
      );
    }

    // Helper function to check if the requesting user is the owner.
    function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
    }

    // Helper function to get the creator's UID from the corresponding Firestore event document.
    function getEventCreatorId(eventId) {
      return get(/databases/$(database)/documents/scheduledEvents/$(eventId)).data.creatorId;
    }
    
    match /avatars/{userId}/{fileName} {
      allow read;
      allow write: if isOwner(userId)
                   && request.resource.contentType.matches('image/.*')
                   && request.resource.size < 5 * 1024 * 1024;
    }

    match /event-images/{eventId}/{fileName} {
      allow read;
      allow write: if request.auth != null
                   && (isAdmin() || request.auth.uid == getEventCreatorId(eventId))
                   && request.resource.contentType.matches('image/.*')
                   && request.resource.size < 5 * 1024 * 1024;
    }
  }
}
